{# ocr/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Processed Data{% endblock %}

{% block body %}
    <h1>Processed Data</h1>

    {% if processed_data %}
        {% if processed_data.nom is defined %}
            <p><strong>Nom:</strong> {{ processed_data.nom }}</p>
        {% endif %}

        {% if processed_data.prenom is defined %}
            <p><strong>Pr√©nom:</strong> {{ processed_data.prenom }}</p>
        {% endif %}

        {% if processed_data.contrat is defined %}
            <p><strong>Contrat:</strong> {{ processed_data.contrat }}</p>
        {% endif %}

        {% if processed_data.consommation is defined %}
            <p><strong>Consommation:</strong> {{ processed_data.consommation }}</p>
        {% endif %}

        {% if processed_data.facture is defined %}
            <p><strong>Facture:</strong> {{ processed_data.facture }}</p>
        {% endif %}

        {% if processed_data.client is defined %}
            <p><strong>Client:</strong> {{ processed_data.client }}</p>
        {% endif %}
    {% else %}
        <p>No processed data available.</p>
    {% endif %}
{% endblock %}
